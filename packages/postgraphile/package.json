{
  "name": "@xuhaojun/refine-postgraphile",
  "version": "1.0.0",
  "private": false,
  "description": "PostGraphile data provider for Refine framework with advanced filtering, real-time subscriptions, and full TypeScript support.",
  "keywords": [
    "refine",
    "postgraphile",
    "graphql",
    "data-provider",
    "crud",
    "react",
    "typescript",
    "admin-panel",
    "headless-cms"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:XuHaoJun/refine-postgraphile.git"
  },
  "homepage": "https://refine.dev/docs/data/packages/postgraphile",
  "license": "MIT",
  "author": "refine",
  "type": "commonjs",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run __tests__",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build && npm run test",
    "publint": "publint --strict=true --level=suggestion"
  },
  "dependencies": {
    "camelcase": "^6.2.0",
    "gql-query-builder": "^3.5.5",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.9.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.1.4",
    "@refinedev/core": "^5.0.5",
    "@types/lodash": "^4.14.171",
    "@types/node": "^20",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "nock": "^13.4.0",
    "tslib": "^2.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.13"
  },
  "peerDependencies": {
    "@refinedev/core": "^5.0.0",
    "gql-query-builder": "^3.5.5",
    "graphql-request": "^5.2.0",
    "graphql-ws": "^5.9.1"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
